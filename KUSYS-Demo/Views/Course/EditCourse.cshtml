@model Course

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Course</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <input hidden asp-for="Id" />
        <div class="mb-3">
            <label asp-for="CourseId"></label>
            <input asp-for="CourseId" class="form-control" />
            <span asp-validation-for="CourseId" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="CourseName"></label>
            <input asp-for="CourseName" class="form-control" />
            <span asp-validation-for="CourseName" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Update</button>
        <a asp-controller="Course" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to List
        </a>
    </div>
</form>
