@using KUSYS_Demo.Models



<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Add Enrollment To Student</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label>Choose Course</label>
            <select name="Course" class="form-control">
                @foreach(Course course in Model.Courses)
                {
                    
                    <option value="@course.Id">@course.CourseId - @course.CourseName</option>
                }
            </select>
        </div>
        <div class="mb-3">
            <label>Choose Student</label>
            <select name="Student" class="form-control">
                @foreach(Student student in Model.Students)
                {
                    
                    <option value="@student.Id">@student.StudentNumber - @student.StudentName @student.StudentSurname</option>
                }
            </select>
        </div>
       
        <button type="submit" class="btn btn-primary" style="width:150px">Enroll Student</button>
        <a asp-controller="Enrollment" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to List
        </a>
    </div>
</form>